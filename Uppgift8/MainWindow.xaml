        <RadioButton x:Name="rbtnMinus" Content="-" HorizontalAlignment="Left" Margin="263,179,0,0" VerticalAlignment="Top" Width="112"/>
        <RadioButton x:Name="rbtnMulti" Content="*" HorizontalAlignment="Left" Margin="263,194,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbtnDiv" Content="/" HorizontalAlignment="Left" Margin="263,210,0,0" VerticalAlignment="Top"/>
        <Label Content="=" HorizontalAlignment="Left" Margin="440,149,0,0" VerticalAlignment="Top" FontSize="20"/>

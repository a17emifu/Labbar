<Window x:Class="Uppgift12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift12"
        mc:Ignorable="d"
        Title="Medelvärde" Height="450" Width="800">
    <Grid>
        <Label Content="Mata in tal" HorizontalAlignment="Left" Margin="76,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="boxNum" HorizontalAlignment="Left" Height="23" Margin="76,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="219,104,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <ListBox x:Name="listbox" HorizontalAlignment="Left" Height="143" Margin="315,104,0,0" VerticalAlignment="Top" Width="109"/>
        <Label Content="Totala medelvärdet" HorizontalAlignment="Left" Margin="76,146,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="boxAverage" HorizontalAlignment="Left" Height="23" Margin="76,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnReset" Content="Nollställ" HorizontalAlignment="Left" Margin="219,131,0,0" VerticalAlignment="Top" Width="75" Click="btnReset_Click"/>

    </Grid>
</Window>
